/* pages/QRCode/QRCode.wxss */

page {
    background-color: #eee;
}

.header {
    background-color: white;
    height: 100rpx;
    line-height: 100rpx;
    display: flex;
    justify-content: space-around;
    margin: 20rpx auto;
    /* width: 95%; */
    border-radius: 10rpx;
}

.selectQrCode {
    color: red;
    border-bottom: 2px solid red;
}

.img {
    display: flex;
    justify-content: center;
    width: 100%;
}

.img image {
    height: 800rpx;
}

.toast {
    width: 80%;
    text-align: center;
    margin: 50rpx auto;
    font-size: 28rpx;
    color: green;
}

.canvas-box {
    position: fixed;
    top: 999999rpx;
    left: 0;
}

canvas {
    width: 686rpx;
    height: 686rpx;
    background: #f1f1f1;
}

/*车牌输入  */

.plate {
    text-align: center;
    padding: 20rpx;
    border-radius: 10rpx;
    background: white;
}

.plate>view {
    text-align: center;
    height: 70rpx;
     width: 500rpx; 
    font-size: 36rpx;
    margin-left: 3rpx;
    vertical-align: middle;
    border-radius: 15rpx;
    text-decoration: none;
    border: 1rpx dotted #888; 
    display: inline-block;
    line-height: 70rpx;
}

.plate>view:nth-of-type(1) {
    vertical-align: middle;
    border: 0 solid;
    width: 100rpx;
    text-decoration: none;
    font-size: 14px;
}

.plate>.none {
    display: none;
}

/*绑定车牌*/

.submit {
    width: 80%;
    margin: 30rpx auto 0;
}

/*键盘  */

.keyboard {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 8px 2px 10px;
    background-color: #bbbaba;
    font-size: 15px;
}

.button {
    width: 9%;
    padding: 0;
    display: inline-block;
    font-size: 40rpx;
    margin: 0 3.5rpx;
    line-height: 2;
    box-shadow: 1px 1px 1px #8e9393;
}

.flagType {
    color: #cd8500;
    border-bottom: 2px solid #cd8500;
}

