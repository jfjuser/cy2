page {
        height: 100%;
	padding-top: 100rpx;
}

.content {
        text-align: center;
        padding: 0 5%;
}

.userinfo {
        margin-bottom: 100rpx;
        display: flex;
        flex-direction: column;
        align-items: center;
}
.userinfo-avatar {
        width: 200rpx;
        height: 200rpx;
        margin: 20rpx;
        border-radius: 50%;
}
.section{
	padding: 20rpx;
}
.section>view{
	display: flex;
	justify-content: center;
	width: 60%;
	padding: 20rpx;
	background: green;
	margin: 30rpx auto;
	color: white;
	border-radius: 10rpx;
}
.Icon{
	width: 60rpx;
	height: 60rpx;
	color: white;
}


