page{
  height:100%;
}
.content {
  text-align: center;
  padding: 0 5%;
}

.userinfo {
  margin-top: 100rpx;
  margin-bottom: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-logIcon {
  width: 60rpx;
  height: 60rpx;
  margin: 10rpx;
  border-radius: 50%;
}

.userinfo-verifiIcon {
  width: 55rpx;
  height: 55rpx;
  margin: 10rpx;
  border-radius: 50%;
}

.input-log {
  height: 80rpx;
  display: flex;
  background: 	#F1F1F1;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  flex-direction: row;
}

.input-area {
  background-color: rbga(255, 255, 255, 0.2);
  text-align: left;
  width: 90%;
  font-size: 30rpx;
  margin: 0 auto;
}

.input-area input {
  height: 100%;
  line-height: 100%;
  width: 100%;
  font-size: 30rpx;
}

.btn-area {
  width: 90%;
  margin: 40rpx  auto;
}

.txt-area {
  margin-top: 30rpx;
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
}

.forgot {
  text-align: center;
  margin-top: 50rpx;
  font-size: 30rpx;
  color: #696969;
}

